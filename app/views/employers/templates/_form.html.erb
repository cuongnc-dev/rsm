  <%= simple_form_for [:employers, @template], remote: :true do |f| %>
  <%= f.hidden_field :user_id %>
  <div class="row">
    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label required" do %>
        <abbr title="required">*</abbr>
        <%= t ".name" %>
      <% end %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: "form-control", required: :true %>
        <%= f.full_error :name, class: "error-message" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <%= f.label :type_of, class: "col-sm-2 control-label required" do %>
        <abbr title="required">*</abbr>
        <%= t ".type" %>
      <% end %>
      <div class="col-sm-7">
        <%= f.select(:type_of, [[t(".interview"),"template_member"],
          [t(".candidate"),"template_user"]], {},
          {class: "form-control"} ) %>
        <%= f.full_error :type_of, class: "error-message" %>
      </div>
    </div>
  </div><br>
  <div class="row">
    <div class="form-group">
      <%= f.label :template_body, class: "col-sm-2 control-label required" do %>
        <abbr title="required">*</abbr>
        <%= t ".body" %>
      <% end %>
      <div class="col-sm-7">
      </div>
    </div>
  </div>
  <div class="row" id = "text-template">
    <%= f.cktext_area :template_body, cols: Settings.templates.textarea , class: "form-control" %>
  </div>

  <div class="modal-footer">
    <div class="row">
      <div class="text-right col-sm-10">
        <%= f.submit t(".save"), class: "btn btn-primary" %>
      </div>
      <div class="text-right col-sm-2">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t ".close" %>
        </button>
      </div>
    </div>
  </div>
<% end %>
