<%= simple_form_for [:employers, @apply_status], remote: true do |f| %>
  <%= f.select :status_step_id, current_status_steps.map{|value| [t("employers.applies.statuses.#{value.name}"), value.id]},
    {}, class: "apply_select form-control" %>
  <%= f.hidden_field :apply_id %>
  <%= f.hidden_field :is_current %>
  <%= f.hidden_field :scheduled, value: company_stattus_step_ids, class: "scheduled_ids" %>
  <%= f.submit t(".save"), class: "btn-submit-edit-applies" %>
<% end %>
