<% if @messages.present? %>
  $('#apply-handling-content').html('');
  $(".progress-indicator").html('<%= j render "status_progress" %>');
  swal({
    title: I18n.t("jobs.apply.confirm_send_email"),
    text: I18n.t("jobs.apply.text_send_email"),
    icon: "warning",
    buttons: true,
    primaryMode: true,
  })
  .then((willDelete) => {
    if (willDelete) {
      $('#apply-handling-content').html('<%=j render partial: "employers/applies/email_form", locals: {apply: @apply, template_users: @template_users} %>');
    }
  });
<% else %>
  <% if @apply.interview_scheduled? || @apply.test_scheduled? %>
    $('#apply-handling-content').html('<%= j (render partial: "employers/applies/appointment_form", locals:{apply: @apply, members: @members, appointments: @appointments, is_interview_scheduled: @is_interview_scheduled}) %>');
  <% else %>
    $('#apply-handling-content').html('');
    alertify.error('<%= @errors %>');
  <% end %>
<% end %>
$('#img-loading').hide();
$('.config').css('opacity', 1);
