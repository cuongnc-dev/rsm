<div class="nested-fields nested-reward-benefits">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-10 padding_left_none">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: t("title"), class: "form-control" %>
        <%= f.error :title, class: "error-message" %>
        <br>
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: t("description"), class: "form-control" %>
        <br>
        <%= f.file_field :picture, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= link_to_remove_association t("remove"), f, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
