<div class="nested-fields nested-reward-benefits">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-10 padding_left_none">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: t("name"), class: "form-control" %>
        <%= f.error :name, class: "error-message" %>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: t("email"), class: "form-control" %>
        <%= f.error :email, class: "error-message" %>
        <br>
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: t("description"), class: "form-control" %>
        <br>
        <%= f.file_field :picture, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= link_to_remove_association  f, class: "btn btn-danger btn-xs" do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
