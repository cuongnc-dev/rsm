<% if @messages.present? %>
  $('#apply-handling-content').html('');
  $('#area-status-progress').html('<%= j render partial: "employers/applies/status_progress", locals: {steps: @steps, current_step: @current_step, company_steps_by_step: @company_steps_by_step} %>');
  $('#area-form-status').html('<%= j render partial: "employers/applies/form_status", locals: {apply: @apply, current_step: @current_step, current_status_steps: @current_status_steps, company_stattus_step_ids: @company_stattus_step_ids} %>');
  $('#btn-prev-apply').html('<%= j render partial: "employers/applies/form_apply_status", locals: {apply_status: @prev_apply_status, btn_name: t("employers.applies.btn_name.prev"), step: @prev_step} %>');
  $('#btn-next-apply').html('<%= j render partial: "employers/applies/form_apply_status", locals: {apply_status: @next_apply_status, btn_name: t("employers.applies.btn_name.next"), step: @next_step} %>');
  $('#status-infor-apply').html('<%= j show_status_apply @current_apply_status.status_step %>');

  swal({
    title: I18n.t('employers.apply_statuses.confirm_send_email'),
    text: I18n.t('employers.apply_statuses.mgs_send_email_susscess'),
    icon: 'warning',
    buttons: true,
    primaryMode: true,
  })
  .then(function(isConfirm){
    if (isConfirm) {
      $('#apply-handling-content').html('<%= j render partial: "employers/applies/email_form", locals: {apply_status: @current_apply_status, apply: @apply, template_users: @template_users} %>');
    }else{
      $('#area-hisory-apply').html('<%= j render partial: "employers/apply_statuses/apply_status", collection: @apply_statuses, as: :apply_status %>');
      $('#pagination-history-apply').html('<%= j paginate @apply_statuses %>');
    }
  });
<% else %>
  <% if @company_stattus_step_ids.include? @apply_status.status_step_id %>
    $('#apply-handling-content').html('<%= j (render partial: "employers/applies/appointment_form", locals:{apply: @apply, members: @members, appointments: @appointments}) %>');
  <% else %>
    $('#apply-handling-content').html('');
    alertify.error('<%= @errors %>');
  <% end %>
<% end %>
$('#img-loading').hide();
$('.config').css('opacity', 1);
