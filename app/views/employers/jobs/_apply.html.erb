<tr id="apply_job_content_<%= apply.id %>">
  <td class="text-center"><strong><%= apply.id %></strong></a></td>
  <td class="text-center">
    <% if apply.user.present? %>
    <strong>
      <%= link_to apply.user.name, employers_job_apply_path(@job, apply) %>
    </strong>
  </td>
  <td class="text-center"><strong><%= apply.user.email %></strong></td>
  <td class="text-center"><strong><%= apply.user.phone %></strong></td>
  <td class="text-center visible-lg"><%= l apply.created_at, format: :long %></td>
  <td id="apply_content_<%= apply.id %>" class="text-center hidden-xs">
    <% else %>
    <strong>
      <%= link_to apply.information[:name], employers_job_apply_path(@job, apply) %>
    </strong>
  </td>
  <td class="text-center"><strong><%= apply.information[:email] %></strong></td>
  <td class="text-center"><strong><%= apply.information[:phone] %></strong></td>
  <td class="text-center visible-lg"><%= l apply.created_at, format: :long %></td>
  <td id="apply_content_<%= apply.id %>"  class="text-center hidden-xs">
    <% end %>
    <span class= "btn btn-xs btn-<%= show_status_apply_job @apply_statuses[apply.id] %>">
      <%= t "employers.applies.statuses.#{apply.status}" %>
    </span>
  </td>
</tr>
