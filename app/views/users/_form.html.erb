<%= javascript_include_tag "format_datepicker", "data-turbolinks-track": "reload" %>
<%= javascript_include_tag "load_image", "data-turbolinks-track": "reload" %>
<%= simple_form_for @user, html: {class: "new-section"}, remote: true, method: :put do |f| %>
  <div class="row">
    <div class="name col-xs-6">
      <div class="edit-field m-b">
        <%= f.label :name, class: "profile_label" do %>
          <strong class="text-red">*</strong><%= t ".name" %>
        <% end %>
        <%= f.text_field :name, autofocus: true, class: "form-control edit-control input-sm",
          placeholder: t(".name") %>
        <span class="error-message">
          <%= f.full_error :name %>
        </span>
      </div>
    </div>
    <div class="name col-xs-6">
      <div class="edit-field m-b">
        <%= f.label :email, class: "profile_label" do %>
          <strong class="text-red">*</strong><%= t ".email" %>
        <% end %>
        <%= f.text_field :email, autofocus: true, class: "form-control edit-control input-sm",
          placeholder: t(".email") %>
        <span class="error-message">
          <%= f.full_error :email %>
        </span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="name col-xs-6">
      <div class="edit-field m-b">
        <%= f.label :address, class: "profile_label" do %>
          <%= t ".address" %>
        <% end %>
        <%= f.text_field :address, autofocus: true, class: "form-control edit-control input-sm",
          placeholder: t(".address") %>
      </div>
    </div>
    <div class="name col-xs-6">
      <div class="edit-field m-b">
        <%= f.label :phone, class: "profile_label" do %>
          <%= t ".phone" %>
        <% end %>
        <%= f.text_field :phone, autofocus: true, class: "form-control edit-control input-sm",
          placeholder: t(".phone") %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="name col-xs-12">
      <div class="edit-field m-b">
        <%= f.label :birthday, class: "profile_label" do %>
          <%= t ".birthday" %>
        <% end %>
        <% if @user.birthday.present? %>
          <%= f.text_field :birthday, data: {provide: "datepicker"},
            class: "datepick form-control edit-control",
              value: @user.birthday.strftime(t ".date_format"),  placeholder: t(".birthday")  %>
        <% else %>
          <%= f.text_field :birthday, data: {provide: "datepicker"},
            class: "datepick form-control edit-control",  placeholder: t(".birthday")  %>
        <% end %>
       </div>
    </div>
  </div>
  <div class="row">
    <div class="name col-xs-12">
      <div class="edit-field m-b">
        <%= f.label :picture, class: "profile_label" %>
        <span class="btn btn-default btn-file">
          <%= t ".browse" %>
          <%= f.file_field :picture, id: "bannerSelect", class: "logo_img_load" %>
        </span>
        <% if @user.picture.present? %>
          <%= image_tag @user.picture.url, class: "transparent absolute", id: "banner_img",
            size: Settings.apply.image %>
        <% else %>
          <%= image_tag "avatar_2x.png", class: "transparent absolute", id: "banner_img",
            size: Settings.apply.image %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="name col-xs-12">
      <div class="edit-field m-b">
        <%= f.label :cv, t(".curriculum"), class: "profile_label" %>
        <span class="btn btn-default btn-file">
          <%= t ".browse" %><%= f.file_field :cv, class: "transparent absolute" %>
        </span>
        <span class="small gray-light pull-left m-l-lg m-r-lg"></span>
      </div>
    </div>
    <% if @user.cv.present? %>
      <%= t ".curriculum_your" %>
      <%= link_to @user.name, @user.cv.url, class: "banner_img_load", id: "logo_img" %>
    <% end %>
  </div>
  <div class="row edit-field">
    <div class="col-sm-6"></div>
    <div class="col-sm-6 text-right">
      <button id="cancel_user_edit" type="button"
        class="btn-cancel btn btn-default" value="<%= @user.id %>">
          <%= t "achievements.cancle" %>
      </button>
      <%= f.submit t(".save"), class: "btn-save btn btn-primary" do  %>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="bot-form"></div>
<% end %>
