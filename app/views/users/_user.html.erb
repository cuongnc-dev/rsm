 <div id= "show-user">
  <div class="col-sm-2 col-md-2">
    <% if @user.picture.present? %>
      <%= show_avatar @user %>
    <% else %>
      <%= image_tag "avatar_2x.png", class: "img-responsive avatar" %>
    <% end%>
  </div>
  <div class="col-sm-10 col-md-10">
    <h4><%= @user.name %></h4>
    <p class = "profile_user">
      <i class="glyphicon glyphicon-map-marker"></i>
      <cite title=""><%= @user.address %></cite>
    </p>
    <p class = "profile_user">
      <i class="glyphicon glyphicon-envelope"></i>
      <cite title=""><%= @user.email %></cite>
    </p>
    <p class = "profile_user">
      <i class="glyphicon glyphicon-gift"></i>
      <cite title=""><%= @user.birthday %></cite>
    </p>
    <div class="btn-group">
      <% if can? :update, @user %>
        <div class="row">
          <div class="col-md-6">
            <div class="view-field m-b download-resume">
              <%= link_to t("downloads.download"), download_path(current_user.id, format: "pdf"),
                class: "btn btn-sm btn-default btn-outline", target: :_blank %>
            </div>
          </div>
          <div class="col-md-6">
            <%= link_to edit_user_path(current_user), remote:true do %>
              <span class= "span-left"></span>
              <i class="fa fa-pencil-square-o fa-2x"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
