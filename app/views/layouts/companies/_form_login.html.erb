<%= form_for resource, as: resource_name, url: session_path(resource_name),
  html: {id: "form-login"} do |f| %>
  <div class="form-group login-error display-none">
    <div class="col-xs-12">
      <p class="color-red text-center"></p>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-envelope"></i></span>
        <%= f.email_field :email, autofocus: true, class: "form-control input-lg",
          placeholder: t("passwords.new.email"), id: "login-email" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
        <%= f.password_field :password,class: "form-control input-lg",
          placeholder: t("passwords.new.password"), id: "login-password"  %>
      </div>
    </div>
  </div>

  <div class="form-group form-actions remember-login">
    <div class="pull-left">
      <%= f.label :remember_me, class: "checkbox inline remember_me" do %>
        <label class="switch switch-primary" data-toggle="tooltip">
          <%= f.check_box :remember_me,id: "login-remember-me" %>
          <span></span>
        </label>
      <% end %>
    </div>
    <div class="pull-right">
      <%= f.button :submit, class: "btn btn-sm btn-primary" do %>
        <%= t "registrations.new.login_to" %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="text-center">
      <a href="javascript:void(0)" class="link-forgot-password">
        <small><%= t "registrations.new.forgot" %></small>
      </a>
      <span> - </span>
      <a href="javascript:void(0)" class="link-register">
        <small><%= t "passwords.new.create_new" %></small>
      </a>
    </div>
  </div>
<% end %>
