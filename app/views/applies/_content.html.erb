<%= simple_form_for @apply , remote: :true, class: "form-horizontal form-bordered" do |f| %>
  <%= f.hidden_field :job_id %>
  <%= f.hidden_field :user_id %>
  <div class="row">
    <table class="col-md-12 table table-condensed table-responsive table-user-information">
      <%= f.simple_fields_for :information do |p| %>
        <%= p.hidden_field :name, value: current_user.name %>
        <%= p.hidden_field :email, value: current_user.email %>
        <%= p.hidden_field :phone, value: current_user.phone %>
        <tr>
          <div class="form-group input-inline boder-left">
            <div class="col-xs-24 lout">
              <div class="input-group">
                <span class="input-group-addon apply-un"><i class="glyphicon glyphicon-user text-primary" aria-hidden="true"></i></span>
                <%= p.text_field :broker, autofocus: true, class: "form-control input-lg",
                  placeholder: t(".who") %>
              </div>
            </div>
          </div>
        </tr>
        <tr>
          <td class="no-border">
            <strong>
              <span class="text-danger">&nbsp;*</span>
              <%= t ".introducing" %>
            </strong>
            <%= p.text_area :introducing, class: "form-control ckeditor", cols: Settings.text_area.cols,
              rows: Settings.text_area.rows %>
            <span class="error-message">
              <%= p.error :information %>
            </span>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="row">
    <table class="col-md-12 table table-condensed table-responsive">
      <% if current_user.cv.present? %>
        <tr>
          <strong class="col-md-3">

            <%= t ".new_cv" %>
          </strong>
        </tr>
        <tr>
          <td>
            <div class="radio">
              <input id="radio-1" name="radio" type="radio" checked value="checked">
              <label for="radio-1" class="radio-label">
                <%= current_user.cv_identifier %>
                <span class="update-at">
                  (<%= t ".update" %><%= I18n.l current_user.updated_at, format: :date_time %>)
                </span>
              </label>
            </div>
            <div class="radio">
              <input id="radio-2" name="radio" type="radio">
              <label for="radio-2" class="radio-label">
                <label class="fileContainer">
                  <p class="check-p text-primary">
                    <%= t ".select-cv" %>
                    <i class="fa fa-upload load-up"></i>
                  </p>
                  <%= f.file_field :cv, id: "cv-file", class: " file-up transparent absolute" %>
                </label>
              </label>
            </div>
          </td>
        </tr>
        <tr class="files_field">
          <td>
            <strong class="col-md-3">
              <span class="glyphicon glyphicon-tag text-primary"></span>
              <%= t ".new_cv" %>
            </strong>
            <span class="btn btn-default btn-file col-md-2">
              <%= t ".browse" %><%= f.file_field :cv, id: "file_cv", class: "transparent absolute" %>
            </span>
          </td>
        </tr>
      <% else %>
        <tr>
          <td>
            <strong class="col-md-3">
              <span class="glyphicon glyphicon-tag text-primary"></span>
              <span class="text-danger">&nbsp;*</span>
              <%= t ".new_cv" %>
            </strong>
            <span class="btn btn-default btn-file col-md-2">
              <%= t ".browse" %><%= f.file_field :cv, class: "transparent absolute" %>
            </span>
          </td>
        </tr>
      <% end %>
      <tr>
        <td>
          <button type="button" class="btn btn-sm btn-default pull-right btn-close-apply" data-dismiss="modal" id ="reset-job">
            <%= t ".close" %>
          </button>
          <button type="submit" class="btn btn-sm btn-warning pull-right load-page">
            <i class="fa fa-plus" aria-hidden="true"></i><%= t ".apply" %>
          </button>
        </td>
      </tr>
    </table>
  </div>
<% end %>
