<div id="form-apply">
  <span class="text-danger">&nbsp;*</span><strong><%= t ".information" %></strong><br>
  <div class="table-responsive">
    <%= f.simple_fields_for :information do |p| %>
      <div id="apply_form">
        <div class="form-group input-inline width-inline">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon apply-un">
                <i class="fa fa-address-book" aria-hidden="true"></i>
              </span>
              <%= p.text_field :name, autofocus: true, class: "form-control input-md",
                placeholder: t(".name") %>
            </div>
          </div>
        </div>
        <div class="form-group input-inline width-inline">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon apply-un">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
              <%= p.text_field :email, autofocus: true, class: "form-control input-md",
                placeholder: t(".email") %>
            </div>
          </div>
        </div>
        <div class="form-group input-inline width-inline">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon apply-un">
                <i class="fa fa-phone" aria-hidden="true"></i>
              </span>
              <%= p.text_field :phone, autofocus: true, class: "form-control input-md",
                placeholder: t(".phone") %>
            </div>
          </div>
        </div>
        <div class="form-group input-inline width-inline display-none-important">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon apply-un"><i class="fa fa-user" aria-hidden="true"></i></span>
              <%= f.text_field :broker, autofocus: true, class: "form-control input-lg",
                placeholder: t(".broker") %>
            </div>
          </div>
        </div>
        <table class="table table-condensed table-responsive table-user-information">
          <tbody>
            <tr>
              <td colspan="2" class="no-boder">
                <strong>
                  <span class="text-primary"></span>
                  <span class="text-danger">&nbsp;*</span><%= t ".introducing" %>
                </strong>
                <%= p.text_area :introducing, class: "form-control ckeditor", cols: Settings.text_area.cols,
                  rows: Settings.text_area.rows %>
              </td>
            </tr>
            <tr>
              <td>
                <strong class="col-md-3">
                  <span class="fa fa-tag text-primary"></span>
                  <span class="text-danger">&nbsp;*</span>
                  <%= t ".new_cv" %>
                </strong>
                <span class="btn btn-info btn-file col-md-2">
                  <%= t ".browse" %><%= f.file_field :cv, class: "transparent absolute choose-cv" %>
                </span>
                <%= text_field_tag nil, nil, class: "form-control center-block w-450", id: "choose-cv", readonly: true %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= render partial: "applies/buttons_survey", locals: {f: f} %>
      </div>
    <% end %>
  </div>
</div>
<%= javascript_include_tag "choose_file" %>
