<body>
  <main>
    <div class="container">
      <input id="tab1" type="radio" name="tabs" checked>
      <label for="tab1"><%= t "apply.applyjob" %></label>
      <section id="content1">
        <% if @applies.blank? %>
          <div class="placeholder-section box-md">
            <p class="placeholder" style="text-align: center;">
              <i class="fa fa-heart" aria-hidden="true"></i>
              <%= t "apply.havenot" %>
            </p>
          </div>
        <% end %>
        <div id ="applies">
          <%= render partial: "apply", collection: @applies %>
        </div>
        <div id = "pag" class = "row text-center">
          <%= paginate @applies %>
        </div>
      </section>
      <section id="content2" class= "show_apply">
      </section>
    </div>
  </main>
</body>
