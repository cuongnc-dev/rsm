<div class="question-<%= question.id %>">
  <i class="text-danger"><%= t ".question", index: f.index + Settings.increase_one %>:</i>
  <b><h5><%= question.name %> ?</h5></b>
  <label class="control-label add-one-more-section" for="apply_information_introducing">
    <% if @job.compulsory? %>
      <abbr title="required">*</abbr>
    <% end %>
    <%= t ".answer" %>
  </label>
  <%= f.input :name, label: false, input_html: {rows: Settings.rows_text_area} %>
  <%= f.hidden_field :question_id, value: question.id %>
</div></br>
