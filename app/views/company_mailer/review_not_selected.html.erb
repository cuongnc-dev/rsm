                                      <tbody>
                                        <tr>
                                          <td height="15"></td>
                                        </tr>
                                        <tr>
                                          <td>
                                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                              <tbody>
                                                <tr>
                                                  <td valign="top">
                                                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                                      <tbody>
                                                        <tr>
                                                          <td valign="top" width="60">
                                                             <%= email_image_tag "logo_app.png", class: "img-lastss" %>
                                                          </td>
                                                          <td width="10" valign="top">&nbsp;</td>
                                                          <td valign="middle" style='vertical-align: middle;'>
                                                            <div class='contentEditableContainer contentTextEditable'>
                                                              <div class='contentEditable' style='text-align: left;font-weight: light; color:#555555;font-size:26;line-height: 39px;font-family: Helvetica Neue;'>
                                                                <h1 class='big'><a target='_blank' href="[CLIENTS.WEBSITE]" style='color:#444444'><%= t "name_app" %></a></h1>
                                                              </div>
                                                            </div>
                                                          </td>
                                                        </tr>
                                                      </tbody>
                                                    </table>
                                                  </td>
                                                  <td valign="top" width="90" class="spechide">&nbsp;</td>
